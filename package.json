{
  "name": "novel-helper",
  "displayName": "Novel Helper",
  "description": "VSCode辅助写小说的插件，支持目录管理、高亮、统计、排版等功能",
  "version": "0.0.10",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.novel-helper.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "novel-helper.initWorkspace",
        "title": "Novel Helper: 开启小说工作区",
        "category": "Novel Helper"
      },
      {
        "command": "novel-helper.closeWorkspace",
        "title": "Novel Helper: 关闭小说工作区",
        "category": "Novel Helper",
        "enablement": "novelHelper.initialized == true"
      },
      {
        "command": "novel-helper.createItem",
        "title": "Novel Helper: 创建小说项",
        "category": "Novel Helper",
        "enablement": "novelHelper.initialized == true"
      },
      {
        "command": "novel-helper.formatDocument",
        "title": "Novel Helper: 格式化文档",
        "category": "Novel Helper",
        "enablement": "novelHelper.initialized == true"
      },
      {
        "command": "novel-helper.deleteItem",
        "title": "Novel Helper: 删除",
        "category": "Novel Helper",
        "enablement": "novelHelper.initialized == true"
      },
      {
        "command": "novel-helper.openConfigPanel",
        "title": "Novel Helper: 打开配置面板",
        "category": "Novel Helper",
        "enablement": "novelHelper.initialized == true"
      },
      {
        "command": "novel-helper.showConfigPanel",
        "title": "Novel Helper: 显示配置面板",
        "category": "Novel Helper",
        "enablement": "novelHelper.initialized == true"
      },
      {
        "command": "novel-helper.addHighlight",
        "title": "Novel Helper: 添加高亮",
        "category": "Novel Helper",
        "enablement": "novelHelper.initialized == true"
      },
      {
        "command": "novel-helper.addHighlightFromSelection",
        "title": "Novel Helper: 在设定中添加高亮",
        "category": "Novel Helper",
        "enablement": "novelHelper.initialized == true"
      },
      {
        "command": "novel-helper.jumpToHighlightSource",
        "title": "Novel Helper: 跳转到高亮源",
        "category": "Novel Helper",
        "enablement": "novelHelper.initialized == true"
      },
      {
        "command": "novel-helper.removeHighlight",
        "title": "Novel Helper: 移除高亮",
        "category": "Novel Helper",
        "enablement": "novelHelper.initialized == true"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "novelTreeView",
          "name": "小说创作面板",
          "icon": "media/icons/novel-icon.svg",
          "contextualTitle": "小说项目"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "novel-helper.addHighlight",
          "when": "novelHelper.initialized == true && editorHasSelection",
          "group": "1_novel_helper"
        },
        {
          "command": "novel-helper.jumpToHighlightSource",
          "when": "novelHelper.initialized == true && editorTextFocus",
          "group": "1_novel_helper"
        },
        {
          "command": "novel-helper.removeHighlight",
          "when": "novelHelper.initialized == true && editorTextFocus",
          "group": "1_novel_helper"
        },
        {
          "command": "novel-helper.openConfigPanel",
          "when": "novelHelper.initialized == true && editorTextFocus",
          "group": "1_novel_helper"
        },
        {
          "command": "novel-helper.formatDocument",
          "when": "novelHelper.initialized == true && editorTextFocus",
          "group": "1_novel_helper"
        }
      ]
      ,
      "view/item/context": [
        {
          "command": "novel-helper.deleteItem",
          "when": "view == novelTreeView && (viewItem == file || viewItem == directory)",
          "group": "2_novel_helper"
        }
      ]
    },
    "configuration": {
      "title": "Novel Helper",
      "properties": {
        "novel-helper.paragraphIndent": {
          "type": "number",
          "default": 2,
          "description": "段首缩进空格数（格式化时使用）"
        },
        "novel-helper.overallIndent": {
          "type": "number",
          "default": 0,
          "description": "文本整体缩进空格数：对所有行生效（首行/折行/所有段落），默认 0。"
        },
        "novel-helper.lineSpacing": {
          "type": "number",
          "default": 1,
          "description": "段间距（段间空行数）：0 表示仅换行；1 表示空一行"
        },
        "novel-helper.autoLayoutOnEnter": {
          "type": "boolean",
          "default": true,
          "description": "回车自动排版：自动插入段间空行与段首缩进（适配软换行写作方式）。"
        },
        "novel-helper.paragraphSplitMode": {
          "type": "string",
          "default": "anyBlankLine",
          "enum": [
            "anyBlankLine",
            "requireAll",
            "majority"
          ],
          "description": "段落识别策略：anyBlankLine=只要文档出现过空行就用空行分段（旧逻辑）；requireAll=只有当所有段落边界都有空行才用空行分段，否则按“一行一段”；majority=当大多数段落边界都有空行才用空行分段，否则按“一行一段”。另外：若某行本身带段首缩进，会被视为新段落开头，即使段间没有空行。"
        },
        "novel-helper.paragraphSplitOnIndentedLine": {
          "type": "boolean",
          "default": true,
          "description": "当某一行本身带段首缩进（看起来是新段开头）时，即使段落间没有空行，也强制从该行开始新段落。默认开启。"
        },
        "novel-helper.fontSize": {
          "type": "number",
          "default": 14,
          "description": "字号大小（通过配置面板修改时会同步更新 editor.fontSize 全局设置）"
        },
        "novel-helper.editorLineHeight": {
          "type": "number",
          "default": 0,
          "description": "VS Code 行高（editor.lineHeight）。0 表示不写入工作区设置。"
        },
        "novel-helper.highlightColor": {
          "type": "string",
          "default": "#FFD700",
          "description": "高亮文本颜色（仅改变文字颜色，不改变背景/不加下划线）"
        },
        "novel-helper.autoDisableIndentGuides": {
          "type": "boolean",
          "default": false,
          "description": "自动隐藏 VS Code 缩进参考线（避免出现两条竖线）。仅写入工作区设置，不影响全局用户设置。"
        },
        "novel-helper.editorWordWrapColumn": {
          "type": "number",
          "default": 0,
          "description": "VS Code 显示换行列宽（editor.wordWrapColumn）。在小说工作区中会启用 wordWrap=wordWrapColumn；当该值>0 时会写入工作区 editor.wordWrapColumn。"
        },
        "novel-helper.useFullWidthIndent": {
          "type": "boolean",
          "default": false,
          "description": "是否使用全角空格（U+3000）作为缩进单位（中文排版更明显）。默认关闭（使用半角空格）。"
        },
        "novel-helper.workspacePath": {
          "type": "string",
          "default": "",
          "description": "Novel Helper 记录的工作区根路径。通常由初始化/关闭工作区命令自动维护，无需手动修改。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/vsce": "^2.26.0",
    "eslint": "^9.39.2",
    "typescript": "^5.1.3"
  },
  "icon": "media/icons/novel-icon.png",
  "publisher": "your-name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/novel-helper.git"
  }
}
