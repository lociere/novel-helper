{
  "name": "novel-helper",
  "displayName": "Novel Helper",
  "description": "VSCode辅助写小说的插件，支持目录管理、高亮、统计、排版等功能",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.novel-helper.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "novel-helper.initWorkspace",
        "title": "Novel Helper: 初始化小说工作区",
        "category": "Novel Helper"
      },
      {
        "command": "novel-helper.createItem",
        "title": "Novel Helper: 创建小说项",
        "category": "Novel Helper"
      },
      {
        "command": "novel-helper.formatDocument",
        "title": "Novel Helper: 格式化文档",
        "category": "Novel Helper"
      },
      {
        "command": "novel-helper.openConfigPanel",
        "title": "Novel Helper: 打开配置面板",
        "category": "Novel Helper"
      },
      {
        "command": "novel-helper.showConfigPanel",
        "title": "Novel Helper: 显示配置面板",
        "category": "Novel Helper"
      },
      {
        "command": "novel-helper.addHighlight",
        "title": "Novel Helper: 添加高亮",
        "category": "Novel Helper"
      },
      {
        "command": "novel-helper.addHighlightFromSelection",
        "title": "Novel Helper: 在设定中添加高亮",
        "category": "Novel Helper"
      },
      {
        "command": "novel-helper.jumpToHighlightSource",
        "title": "Novel Helper: 跳转到高亮源",
        "category": "Novel Helper"
      },
      {
        "command": "novel-helper.removeHighlight",
        "title": "Novel Helper: 移除高亮",
        "category": "Novel Helper"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "novelTreeView",
          "name": "小说创作面板",
          "icon": "media/icons/novel-icon.svg",
          "contextualTitle": "小说项目"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "novel-helper.addHighlight",
          "when": "editorHasSelection",
          "group": "1_novel_helper"
        },
        {
          "command": "novel-helper.jumpToHighlightSource",
          "when": "editorTextFocus",
          "group": "1_novel_helper"
        },
        {
          "command": "novel-helper.removeHighlight",
          "when": "editorTextFocus",
          "group": "1_novel_helper"
        },
        {
          "command": "novel-helper.openConfigPanel",
          "when": "editorTextFocus",
          "group": "1_novel_helper"
        },
        {
          "command": "novel-helper.formatDocument",
          "when": "editorTextFocus",
          "group": "1_novel_helper"
        }
      ]
    },
    "configuration": {
      "title": "Novel Helper",
      "properties": {
        "novel-helper.paragraphIndent": {
          "type": "number",
          "default": 2,
          "description": "段首缩进空格数（格式化时使用）"
        },
        "novel-helper.overallIndent": {
          "type": "number",
          "default": 0,
          "description": "文本整体缩进空格数：对所有行生效（首行/折行/所有段落），默认 0。"
        },
        "novel-helper.lineSpacing": {
          "type": "number",
          "default": 1,
          "description": "段落间空行数（0 表示仅换行；1 表示空一行）"
        },
        "novel-helper.fontSize": {
          "type": "number",
          "default": 14,
          "description": "字号大小（通过配置面板修改时会同步更新 editor.fontSize 全局设置）"
        },
        "novel-helper.highlightColor": {
          "type": "string",
          "default": "#FFD700",
          "description": "高亮文本颜色（仅改变文字颜色，不改变背景/不加下划线）"
        },
        "novel-helper.hardWrapOnFormat": {
          "type": "boolean",
          "default": false,
          "description": "是否在\"格式化文档\"时进行硬换行（插入真实换行符）。默认关闭。"
        },
        "novel-helper.autoHardWrapColumn": {
          "type": "number",
          "default": 0,
          "description": "硬换行阈值（字符数）。0 表示关闭；大于 0 时：1) 输入时：光标位于行尾且行长度达到阈值，会自动插入换行符；2) 格式化时：若开启 hardWrapOnFormat，会按该阈值插入换行符。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^9.39.2",
    "typescript": "^5.1.3"
  },
  "icon": "media/icons/novel-icon.png",
  "publisher": "your-name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/novel-helper.git"
  }
}
